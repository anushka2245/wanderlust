<% layout('layouts/boilerplate') %>
<body>
    <h3>All Listings</h3>
    <!-- <form action="/listings/new" method="get">
        <button class="button">Create New</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listings of allListings ){%>
            <a href="/listings/<%= listings._id%>" class="listing-link">
            <div class="card col">
                <img 
                src="<%= listings.image %>" class="card-img-top"
                 alt="listing_image" 
                 style="height: 20rem;"/>
                <div class="card-img-overlay">as</div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listings.title%></b><br>
                    &#8377;<%= listings.price ? listings.price.toLocaleString("en-IN") : "N/A" %>/night
                </p>
                </div>
            </div>
            </a>
            <%}%>
    </div>
    
</body>
